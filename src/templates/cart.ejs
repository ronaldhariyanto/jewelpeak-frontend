<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <body>
    <% include partials/header %>
    <% include partials/navigation %>
    <% include partials/breadcrumb %>

    <section class="cart">
      <div class="container">
        <div class="row">
          <div class="col-lg-9 col-md-9 col-sm-7 col-xs-6 col-xxs-12 text-center-xs">
            <h1 class="cart-title">
              <i class="glyphicon glyphicon-shopping-cart"></i>
              <span>Shopping cart </span>
            </h1>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar col-xs-6 col-xxs-12 text-center-xs">
            <h4 class="cart-back-to"><a href=""><i class="fa fa-chevron-left"></i> Back to shopping </a></h4>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-9 col-md-9 col-sm-7">
            <div class="row user-info">
              <div class="col-xs-12 col-sm-12">
                <div class="cart-content">
                  <table class="cart-table table-responsive">
                    <tbody>
                      <tr class="cart-product cart-table-header">
                        <td style="width:15%">Product</td>
                        <td style="width:40%">Details</td>
                        <td style="width:10%" class="delete">&nbsp;</td>
                        <td style="width:10%">QNT</td>
                        <td style="width:10%">Discount</td>
                        <td style="width:15%">Total</td>
                      </tr>

                      <tr class="cart-product">
                        <td class="cart-product-thumb">
                          <div>
                            <a href="product-details.html"><img src="assets/images/product/product-600-01.jpg" alt="img"></a>
                          </div>
                        </td>
                        <td>
                          <div class="cart-description">
                            <h4><a href="product-details.html">Diamond Gaby</a></h4>
                            <span class="size">1 gr</span>
                            <div class="price"><span>S$1,200.00</span></div>
                          </div>
                        </td>
                        <td class="delete">
                          <a title="Delete"><i class="glyphicon glyphicon-trash fa-2x"></i></a>
                        </td>
                        <td>
                          <input class="quanity-sniper" type="text" value="2" name="quanitySniper">
                        </td>
                        <td>0</td>
                        <td class="price">S$1,200.00</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <div class="cart-footer">
                  <div class="box-footer">
                    <div class="pull-left">
                      <a href="index.html" class="btn btn-default"> <i class="fa fa-arrow-left"></i> &nbsp; Continue shopping </a>
                    </div>
                    <div class="pull-right">
                      <button type="submit" class="btn btn-default"><i class="fa fa-undo"></i> &nbsp; Update cart </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-5 sidebar-right">
            <div class="content-box">
              <div class="cost-details">
                  <div class="table-block" id="order-detail-content">
                    <a class="btn btn-primary btn-lg btn-block " title="checkout" href="">
                      Proceed to checkout &nbsp; <i class="fa fa-arrow-right"></i>
                    </a>

                    <div class="cart-mini-table">
                      <table id="cart-summary" class="table">
                        <tbody>
                          <tr>
                            <td>Total products</td>
                            <td class=""><b>S$1,200.00</b></td>
                          </tr>
                          <tr style="">
                            <td>Shipping</td>
                            <td class="price"><span class="success">Free shipping!</span></td>
                          </tr>
                          <tr class="cart-total-price ">
                            <td>Total (tax excl.)</td>
                            <td class=""><b>S$1,200.00</b></td>
                          </tr>
                          <tr>
                            <td>Total tax</td>
                            <td class="" id="total-tax"><b>S$0.00</b></td>
                          </tr>
                          <tr>
                            <td> Total</td>
                            <td class="price" id="total-price">S$1,200.00</td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


    <% include partials/footer %>
    <% include partials/scripts %>
  </body>
</html>