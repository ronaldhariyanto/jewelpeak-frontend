<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head %>
  </head>
  <body>
    <% include partials/header %>
    <% include partials/navigation %>

    <section class="collections-detail-header" style="background-image:url(assets/images/top-banner-product.jpg)">
      <div class="container">
        <div class="row">
          <div class="col-lg-4">
            <h2>Gemstone<br>Engagement</h2>
          </div>
          <div class="col-lg-6">
            <h4>Create the perfect engagement ring.<br>Choose from any style, any stone, any metal.<br>A one-of-a-kind engagement ring created just for you.</h4>
          </div>
        </div>
      </div>
    </section>

    <section class="collections-details-content">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
             <ul class="nav nav-tabs" role="tablist">
              <li role="presentation" class="col-lg-6 active"><a href="#choose-collect" aria-controls="choose-collect" role="tab" data-toggle="tab">Choose Gemstone</a></li>
              <li role="presentation" class="col-lg-6 "><a href="#choose-sett" aria-controls="choose-sett" role="tab" data-toggle="tab">Choose Setting</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane active" id="choose-collect">
                <section class="collections-filters">
                  <div class="row">
                    <div class="col-lg-6">
                      <h4>Color</h4>
                      <h4>Shape</h4>
                    </div>
                    <div class="col-lg-6">
                      <h4>Carat</h4>
                      <h4>Price</h4>
                    </div>
                  </div>
                </section>
                <div class="collections-details-result">
                  <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="col-lg-4 active">
                      <a href="#results-tabs" aria-controls="results-tabs" role="tab" data-toggle="tab">Results</a>
                    </li>
                    <li role="presentation" class="col-lg-4 ">
                      <a href="#recently-tabs" aria-controls="recently-tabs" role="tab" data-toggle="tab">Recently Viewed</a>
                    </li>
                    <li role="presentation" class="col-lg-4 ">
                      <a href="#comparison-tabs" aria-controls="comparison-tabs" role="tab" data-toggle="tab">Comparison</a>
                    </li>
                  </ul>
                  <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="results-tabs">
                      <section class="results-header">
                        <div class="row">
                          <div class="col-lg-6">
                            <h4>Showing <span>1,234</span> Results</h4>
                          </div>
                          <div class="col-lg-6">
                            <label for="">Sort By</label>
                            <select name="" class="select2">
                              <option value="">Assending</option>
                              <option value="">Decending</option>
                              <option value="">All</option>
                            </select>
                          </div>
                        </div>
                      </section>
                      <table class="table">
                        <thead>
                          <tr>
                            <th>Actual Photo</th>
                            <th>Shape</th>
                            <th>Carat</th>
                            <th>Color</th>
                            <th>Price</th>
                            <th>Compare</th>
                            <th>Wishlist</th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><img src="http://placeholder" alt=""></td>
                            <td>Oval</td>
                            <td>1.01</td>
                            <td>Blue Sapphire</td>
                            <td>$430</td>
                            <td><i class="icon-gemstone-rings"></i></td>
                            <td><i class="fa fa-love"></i></td>
                            <td>
                              <button>
                                <i class="fa fa-check"></i>
                              </button>
                              <button>
                                Details
                              </button>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                    <div role="tabpanel" class="tab-pane fade active" id="recently-tabs">

                    </div>
                    <div role="tabpanel" class="tab-pane fade active" id="comparison-tabs">

                    </div>
                  </div>
                </div>
              </div>
              <div role="tabpanel" class="tab-pane fade" id="choose-sett">
              
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <% include partials/footer %>
    <% include partials/scripts %>
  </body>
</html>